[CHARDEF c_drugdealer]
NAME=Drug Dealer
CAM=MT_WALK|MT_USEHANDS|MT_RUN|MT_EQUIP

CATEGORY=Uniques
SUBSECTION=Chars
DESCRIPTION=Drug Dealer

TSPEECH=Dealing
TSPEECH=Weed
TSPEECH=Bongs
TSPEECH=Papers
TSPEECH=Snitch

TEVENTS=e_Human_HearUnk

ON=@Create
COLOR=Colors_Skin
DEX{300 310}
STR{500 510}
INT{400 410}

WRESTLING={200.0 250.0}

NPC=Brain_human

//******************************//
//*           SPEECH           *//
//******************************//

[SPEECH Dealing]
ON=wassup
SAY=Wassup my man, you looking to get [high]?
ON=yo
SAY=Wassup my man, you looking to get [high]?
ON=hi
SAY=Wassup my man, you looking to get [high]?
ON=*hello*
SAY=Wassup my man, you looking to get [high]?
ON=*hail*
SAY=Wassup my man, you looking to get [high]?
ON=*hello*
SAY=Wassup my man, you looking to get [high]?
ON=high
SAY=I'm selling [weed], [bongs], and rolling [papers].

[SPEECH Weed]
ON=weed
SAY=Thats gonna cost you 50k. Still wanna [buy] some?
ON=buy
IF (<SRC.RESTEST 50000 i_gold>)  //check to make sure src has 50k
SRC.CONSUME 50000 i_gold         //take 50k from src
SRC.NEWITEM=i_marijuana          //newitem
SRC.ACT.BOUNCE                   //put newitem in pack
SAY=Enjoy...
ELSE
SAY=You broke, The price is 50K

[SPEECH Bongs]
ON=bongs
SAY=Thats gonna cost you 30K. Still wanna [invest] in one?
ON=invest
IF (<SRC.RESTEST 30000 i_gold>)
SRC.CONSUME 30000 i_gold
SRC.NEWITEM=i_bong
SRC.ACT.BOUNCE
SAY=Enjoy...
ELSE
SAY=You broke, The price is 30K

[SPEECH Papers]
ON=papers
SAY=Thats gonna cost you 20K. Still wanna [purchase] some?
ON=purchase
IF (<SRC.RESTEST 20000 i_gold>)
SRC.CONSUME 20000 i_gold
SRC.NEWITEM=i_rolling_papers
SRC.ACT.BOUNCE
SAY=Enjoy...
ELSE
SAY=You broke, The price is 20K

[SPEECH Snitch]
ON=*guards*
SAY=You Snitch!!
ON=*drugs*
SAY=Shhhh, like tell everyone i'm dealing.
ON=*dealing*
SAY=Shhhh, like tell everyone i'm dealing.


