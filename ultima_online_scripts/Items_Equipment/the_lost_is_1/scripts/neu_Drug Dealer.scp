[ITEMDEF i_marijuana]
NAME=Marijuana
ID=0cb2

CATEGORY=Uniques
SUBSECTION=Misc
DESCRIPTION=Marijuana

ON=@CREATE

ON=@DCLICK
IF (<SRC.RESTEST 1 i_rolling_papers>)
SRC.CONSUME 1 i_marijuana
SRC.CONSUME 1 i_rolling_papers
SRC.NEWITEM=i_joint
SRC.ACT.BOUNCE
ELSE
SRC.MESSAGE You need rolling papers.

[ITEMDEF i_rolling_papers]
NAME=Rolling Papers
ID=0e16

CATEGORY=Uniques
SUBSECTION=Misc
DESCRIPTION=Rolling Papers

ON=@CREATE

ON=@DCLICK
IF (<SRC.RESTEST 1 i_marijuana>)
SRC.CONSUME 1 i_marijuana
SRC.CONSUME 1 i_rolling_papers
SRC.NEWITEM=i_joint
SRC.ACT.BOUNCE
ELSE
SRC.MESSAGE You need some marijuana.


[ITEMDEF i_bong]
NAME=Bong
ID=0e28

CATEGORY=Uniques
SUBSECTION=Misc
DESCRIPTION=Bong

ON=@CREATE
HITPOINTS={3 5}
COLOR=0480

ON=@DCLICK
IF (<SRC.RESTEST 1 i_marijuana>)
SRC.CONSUME 1 i_marijuana
ELSE
SRC.MESSAGE You need some marijuana.


[ITEMDEF i_joint]
NAME=Joint
ID=09a5

CATEGORY=Uniques
SUBSECTION=Misc
DESCRIPTION=Joint

ON=@Create
COLOR=00429

ON=@Timer
IF <MORE2>=0
CONT.FLAGS=(<CONT.FLAGS>+(-000400000))
CONT.FIX
CONT.UPDATE
CONT.EMOTE=sobering up. 
REMOVE
Return 1

ON=@DCLICK
IF <SRC.FINDID.i_joint>
SRC.FLAGS=<SRC.FLAGS>+000400000 
SRC.FINDID.i_joint.MORE2=<SRC.FINDID.i_joint.MORE2>+2
SRC.SYSMESSAGE=Dayum, I must be tripp'n
Timer=10
REMOVE
RETURN 1
ELSE
SRC.SYSMESSAGE=Dayum, I must be tripp'n
SRC.ANIM 33
SRC.ACT.EQUIP
SRC.ACT.TIMER 10
REMOVE
RETURN 1
ENDIF


