[EVENTS e_npcexp] 
ON=@CLICK
TAG.LEVEL=<EVAL <STR> + <DEX> + <INT>>/58
MESSAGE [Difficulty <EVAL 0<TAG.LEVEL>>]
ON=@Death
//IF ( <SRC.FLAGS>&08000000)
//RETURN 0
IF (<EVAL 0<TAG.LEVEL>>(75)>)
SRC.ACT.TAG.EXP=<EVAL 0<SRC.ACT.TAG.EXP>>+<EVAL <STR> + <DEX> + <INT>>/50
ELIF (<EVAL 0<TAG.LEVEL>>(35)>)
SRC.ACT.TAG.EXP=<EVAL 0<SRC.ACT.TAG.EXP>>+<EVAL <STR> + <DEX> + <INT>>/50
ELIF (<EVAL 0<TAG.LEVEL>>(25)>)
SRC.ACT.TAG.EXP=<EVAL 0<SRC.ACT.TAG.EXP>>+<EVAL <STR> + <DEX> + <INT>>/50
ELSE
SRC.ACT.TAG.EXP=<EVAL 0<SRC.ACT.TAG.EXP>>+<EVAL <STR> + <DEX> + <INT>>/50
ENDIF
RETURN 0



[PLEVEL 1]

level
exp


[FUNCTION level]
SRC.TAG.EXPNEEDED=<EVAL 0<SRC.TAG.LEVEL>*(150)>
//IF (<EVAL 0<SRC.TAG.LEVEL>==(300)>)  //###############USE TO MAKE MAXIMUM LEVEL.
//SRC.SYSMESSAGE You have reached Maxmimum Level!
IF (<EVAL 0<SRC.TAG.EXP>>>=<EVAL 0<SRC.TAG.EXPNEEDED>>)
SRC.TAG.EXP=(<EVAL 0<SRC.TAG.EXP>-<EVAL 0<SRC.TAG.EXPNEEDED>)
SRC.TAG.LEVEL=<EVAL 0<SRC.TAG.LEVEL>+(1)>
SRC.MESSAGE You have Reached Level <EVAL 0<SRC.TAG.LEVEL>>!
DIALOG d_lvlstat
RETURN 1
ELSE
SRC.SYSMESSAGE You lack the exp to Level! You need <EVAL 0<SRC.TAG.EXPNEEDED>-0<SRC.TAG.EXP>> more exp to level.
RETURN 0

[FUNCTION exp]
SRC.TAG.EXPNEEDED=<EVAL 0<SRC.TAG.LEVEL>*(150)>
SRC.SYSMESSAGE You have <EVAL 0<SRC.TAG.EXP>> exp, You need <EVAL 0<SRC.TAG.EXPNEEDED>-0<SRC.TAG.EXP>> more exp to level.
RETURN 0


