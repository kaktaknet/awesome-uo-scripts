// Items gemmed with Tourmaline

[ITEMDEF i_platemail_arms_turmalina]
ID=i_platemail_arms
NAME=Platemail Arms gemmed with Tourmaline
TYPE=T_ARMOR
FLIP=1
SKILLMAKE=TINKERING 35.0,t_tinker_tools
RESOURCES=1 i_platemail_arms_socket, 1 i_gema_turmalina
WEIGHT=18
ARMOR=40
REQSTR=40
CATEGORY=AoD Shard
SUBSECTION=Socket System
DESCRIPTION=Tourmaline Arms
DUPELIST=01417

ON=@Create
COLOR=color_iron_socket
HITPOINTS={51 65}

ON=@EQUIP
COLOR=color_turmalina
SRC.SYSMESSAGE You feel the power of the gem making effect in the platemail and slowly increasing your dexterity.
SRC.DEX=(<SRC.DEX>+1)

ON=@UNEQUIP
COLOR=color_iron_socket
SRC.SYSMESSAGE After taking off the platemail, the power of the gem stops making effect.
SRC.DEX=(<SRC.DEX>-1)


