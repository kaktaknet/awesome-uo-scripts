act.p=<p>
act.move nw
newitem=i_taliban_brain
act.name=<tag.tnombre>'s brain
act.timer=40
act.p=<p>
act.move n
newitem=i_taliban_legs
act.timer=40
act.name=<tag.tnombre>'s legs
act.p=<p>
act.move se
newitem=i_taliban_torso
act.timer=40
act.name=<tag.tnombre>'s torso
act.p=<p>
act.move w
if (<src.npc><>0)
body=c_man_invisible
suicide
remove
else
remove
endif
src.suicide
return 0
else
src.EFFECT=0,0,8,10,1
sound=011d
newitem=i_taliban_blood2
act.timer=40
act.name=<tag.tnombre>'s blood
act.p=<p>
newitem=i_taliban_blood1
act.name=<tag.tnombre>'s blood
act.timer=40
act.p=<p>
act.move nw
newitem=i_taliban_brain
act.name=<tag.tnombre>'s brain
act.timer=40
act.p=<p>
act.move n
newitem=i_taliban_legs
act.timer=40
act.name=<tag.tnombre>'s legs
act.p=<p>
act.move se
newitem=i_taliban_torso
act.timer=40
act.name=<tag.tnombre>'s torso
act.p=<p>
act.move w
if (<src.npc><>0)
body=c_man_invisible
suicide
remove
else
remove
endif
src.hits=<src.hits>+(-(<src.str>/3))
return 0
endif



