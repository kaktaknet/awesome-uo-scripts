id=c_man
ICON=i_barrel
CAN=MT_WALK|MT_FLY|MT_RUN
armor=40

on=@create
NPC=brain_monster
title=The Suicide
tag.tnombre=<name>
name=<name> the Kamikaze
karma=-11000
color=083ea
str=180
dex=1000
int=10
tactics=100.0
wrestling=100.0
magicresistance=100.0
itemnewbie=i_bandana
color=38
