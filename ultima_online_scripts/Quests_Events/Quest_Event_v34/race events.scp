[EVENTS e_race_necromancer] 

ON=@itemequip
IF <ACT.TYPE>==t_armor 
SYSMESSAGE You cannot wear this armor type.
ACT.BOUNCE
RETURN 1 
ELSEIF <ACT.TYPE>==t_weapon_bow 
SYSMESSAGE You cannot use this weapon.
ACT.BOUNCE
RETURN 1 
ELSEIF <ACT.TYPE>==t_weapon_mace_sharp 
SYSMESSAGE You cannot use this weapon.
ACT.BOUNCE
RETURN 1 
ELSEIF <ACT.TYPE>==t_weapon_sword 
SYSMESSAGE You cannot use this weapon.
ACT.BOUNCE
RETURN 1 
ENDIF

