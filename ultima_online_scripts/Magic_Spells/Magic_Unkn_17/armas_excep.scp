[function tirarstam]
if (<src.stam>>85)
SRC.stam (<SRC.stam>+(-85))
return 0
else
src.stam 0
return 0

[function tirarmana]
if (<src.mana>>65)
SRC.MANA (<SRC.MANA>+(-65))
return 0
else
src.mana 0
return 0

[function tirarmana2]
