///////////+5 magery///////////// 


[ITEMDEF i_psmage5] 
id=i_deed 
NAME=+5 Magery 
TYPE=T_deed 
Weight=1 

ON=@CREATE 
COLOR=0481 

CATEGORY=Power Scrolls 
SUBSECTION=+5 
DESCRIPTION=magery 


ON=@DCLICK 
DIALOG=d_mage5_yn 



[DIALOG d_mage5_yn] 
0, 0 
PAGE 0 
resizepic 113 37 2620 400 105 
text 125 50 95 0 
text 197 84 1152 1 
text 358 84 1152 2 
button 231 85 239 240 1 0 1 
button 382 85 243 241 1 0 2 

[DIALOG d_mage5_yn TEXT] 
Are you sure you use this scroll?? 
Yes 
No 


[DIALOG d_mage5_yn BUTTON] 

ON=1 
IF <SRC.MAGERY> > 1150 
      SRC.MESSAGE @70 You are already to powerful for the effects of this scroll to work! 
   RETURN 1 
ELSE 
      SRC.MESSAGE @90 You feel a surge of magical energy go through your body. 
      SRC.SYSMESSAGE @90 You feel more skilled in magery!. 
      SRC.magery= (<SRC.magery>+(5.0)) 
                src.effect=3,i_fx_sparkle ,6,15,1 
      sfx snd_SPELL_GREATER_HEAL 
remove 
   ENDIF 
    
RETURN 0 



ON=2 
SRC.SYSMESSAGE @54 Menu Closed 






