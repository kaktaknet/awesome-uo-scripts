[REGIONRESOURCE mr_tree]
// lumberjacking default
// t_tree
skill=1.0,80.0
amount=9,30
REAP=i_log
REGEN=60*60*10

on=@resourcefound
obj=<argo.uid>
call f_findtree
if <def.logs.<local.tree>>
	obj.more1=<def.logs.<local.tree>>
endif

[function f_findtree]
for x 0 <eval <obj.p.statics>-1>
	if <obj.p.statics.<local.x>.type>==t_tree
		local.tree=<obj.p.statics.<local.x>.baseid>
	endif
endfor
src.sysmessage <local.tree>
