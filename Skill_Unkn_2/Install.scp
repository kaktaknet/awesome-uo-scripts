[REGIONTYPE r_default_water t_water]
// Not really ocean area.
RESOURCES=125.0 mr_fish1
RESOURCES=125.0 mr_fish2
RESOURCES=125.0 mr_fish3
RESOURCES=125.0 mr_fish4
RESOURCES=75.0 mr_temp_str
RESOURCES=75.0 mr_temp_dex
RESOURCES=75.0 mr_temp_int
RESOURCES=50.0 mr_healing
RESOURCES=50.0 mr_mana_healing
RESOURCES=50.0 mr_stam_healing
RESOURCES=4.0 mr_strfish
RESOURCES=4.0 mr_dexfish
RESOURCES=4.0 mr_intfish
RESOURCES=3.0 mr_killfish

[REGIONTYPE r_water t_water]
// Water/Ocean boat sounds
RESOURCES=125.0 mr_fish1
RESOURCES=125.0 mr_fish2
RESOURCES=125.0 mr_fish3
RESOURCES=125.0 mr_fish4
