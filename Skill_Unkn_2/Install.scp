//replacing those that are already existing such as the REGIONTYPE blocks.

[REGIONRESOURCE mr_strfish]
// fishing default
// t_water
SKILL_LO=90.0
SKILL_HI=100.0
AMOUNT_LO=1
AMOUNT_HI=1
REAP=i_strfish
REGEN=60*60*10

[REGIONRESOURCE mr_dexfish]
// fishing default
// t_water
SKILL_LO=90.0
SKILL_HI=100.0
AMOUNT_LO=1
AMOUNT_HI=1
