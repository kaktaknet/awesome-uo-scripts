[itemdef i_stat_stone] 
NAME=Stat Stone 
ID=i_gravestone 
TYPE=t_normal 
 
on-@create  
color=0 
 
on=@dclick 
IF (<src.tag.stats>=1) 
src.sysmessage You Have Already Used This! 
return 1 
ELSE 
src.str 100 
src.dex 100 
src.int 100 
src.hits 100 
src.mana 100 
src.stam 100