[ITEMDEF i_FURNITUREdye_tub]
DEFNAME=i_furny_tub
NAME=Furniture Dying Tub
ID=0fab
value=500
TYPE=T_DYE_VAT
DYE=1

SUBSECTION=Dye Tubs
CATEGORY=Colour
DESCRIPTION=Furniture Dying Tub

ON=@CREATE
COLOR=00

ON=@TARGON_CHAR
SRC.SYSMESSAGE You cannot dye that!
RETURN 1

ON=@TARGON_ITEM
IF !(<SRC.RESTEST 1 <SRC.TARG.BASEID>> >
SRC.MESSAGE Things must be in your pack!
SOUND 510
RETURN 1
ELSE
IF (<SRC.TARG.TYPE>==t_table)
SRC.TARG.COLOR=<SRC.COLOR>
SRC.TARG.UPDATE
SOUND 37
SRC.SYSMESSAGE Your <src.targ.name> was Dyed
RETURN 0
ELSE
IF (<SRC.TARG.TYPE>==t_chair) 
SRC.TARG.COLOR=<SRC.COLOR>
SRC.TARG.UPDATE
SOUND 37
SRC.SYSMESSAGE Your <src.targ.name> was Dyed
RETURN 0
ELSE
IF (<SRC.TARG.TYPE>==t_container)
SRC.TARG.COLOR=<SRC.COLOR>
SRC.TARG.UPDATE
SOUND 37
SRC.SYSMESSAGE Your <src.targ.name> was Dyed
RETURN 0
ELSE
SRC.SYSMESSAGE THAT IS NOT FURNITURE
SOUND 510
RETURN 1

