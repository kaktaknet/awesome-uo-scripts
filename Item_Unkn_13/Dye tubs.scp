\********************Dye Tubs********************
[ITEMDEF I_ANIMALDYE_TUB] 
ID=I_DYE_TUB
TYPE=T_DYE_VAT
NAME=Animal Dying Tub
WEIGHT=5

SUBSECTION=Dye Tubs
CATEGORY=Colour
DESCRIPTION=Animal Dying Tub

ON=@CREATE
COLOR=0

ON=@DCLICK 
TARGET Choose the Animal to color
RETURN 1

ON=@TARGON_CHAR 
IF (<SRC.TARG.BODY>==c_man) || (<SRC.TARG.BODY>==c_woman) 
SRC.SYSMESSAGE You can not dye a human! 
RETURN 1 
ELSEIF !<src.targ.brain>
SRC.SYSMESSAGE YOU CANNOT DYE YOURSELF! 
RETURN 1 
ELSEIF <SRC.TARG.ISMYPET>
SRC.TARG.COLOR=<color> 
SRC.TARG.UPDATE 
SRC.SOUND 023e 
RETURN 1
ELSE 
SRC.SYSMESSAGE You can only dye Tame Animals with this stone! 
RETURN 1 
ENDIF 

ON=@TARGON_ITEM 
if <src.targ.baseid>==i_et_ebear
SRC.TARG.COLOR=<color> 
SRC.TARG.UPDATE 
SRC.SOUND 023e 
RETURN 1
elseif <src.targ.baseid>==i_et_eo
SRC.TARG.COLOR=<color> 
SRC.TARG.UPDATE 
SRC.SOUND 023e 
RETURN 1
elseif <src.targ.baseid>==i_et_eh
SRC.TARG.COLOR=<color> 
SRC.TARG.UPDATE 
SRC.SOUND 023e 
RETURN 1
elseif <src.targ.baseid>==i_et_ed
SRC.TARG.COLOR=<color> 
SRC.TARG.UPDATE 
SRC.SOUND 023e 
RETURN 1
elseif <src.targ.baseid>==i_et_eu
SRC.TARG.COLOR=<color> 
SRC.TARG.UPDATE 
SRC.SOUND 023e 
RETURN 1
elseif <src.targ.baseid>==i_et_rb
SRC.TARG.COLOR=<color> 
SRC.TARG.UPDATE 
SRC.SOUND 023e 
RETURN 1
elseif <src.targ.baseid>==i_et_euni
SRC.TARG.COLOR=<color> 
SRC.TARG.UPDATE 
SRC.SOUND 023e 
RETURN 1
elseif <src.targ.baseid>==i_et_el
SRC.TARG.COLOR=<color> 
SRC.TARG.UPDATE 
SRC.SOUND 023e 
RETURN 1
elseif <src.targ.baseid>==i_et_eb
SRC.TARG.COLOR=<color> 
