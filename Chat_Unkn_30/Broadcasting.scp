[ITEMDEF I_BROADCAST_BOLD]
ID=I_VIRTSTONE_6
NAME=Broadcast Stone

ON=@CLICK
MESSAGE @0480 [Font: Bold]
MESSAGE @07a1 Broadcast Stone
RETURN 1

ON=@DCLICK
TIMER=0

ON=@CREATE
TIMER=0
TAG.MESSAGE=1

ON=@TIMER
IF (<TAG.MESSAGE>==11)
TAG.MESSAGE=1
ENDIF

SERV.B @07a1 Auto Message: <DEF.BC_MESSAGE_<EVAL <TAG.MESSAGE>>>
TAG.MESSAGE=<TAG.MESSAGE>+1
TIMER=60*5
RETURN 1 

[ITEMDEF I_BROADCAST_NORMAL]
ID=I_VIRTSTONE_2
NAME=Broadcast Stone

ON=@CLICK
MESSAGE @0480 [Font: Normal]
MESSAGE @07a1 Broadcast Stone
RETURN 1

ON=@DCLICK
TIMER=0

ON=@CREATE
TIMER=0
TAG.MESSAGE=1

ON=@TIMER
IF (<TAG.MESSAGE>==11)
TAG.MESSAGE=1
ENDIF

SERV.ALLCLIENTS SYSMESSAGE @07a1 Auto Message: <DEF.BC_MESSAGE_<EVAL <TAG.MESSAGE>>>
TAG.MESSAGE=<TAG.MESSAGE>+1
TIMER=60*5
RETURN 1

