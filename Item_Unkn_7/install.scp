//[SKILLMENU sm_BOWCRAFT] in Sphereskills.scp.

//ON=i_yew_heavyxbow Colored Bows
//SKILLMENU=sm_bows_colored

//And you must put the following blocks into Sphereregion.scp replacing
//those that are already existing such as the REGIONTYPE blocks.

[REGIONRESOURCE mr_tree]
// lumberjacking default
// t_tree
SKILL_LO=0.0
SKILL_HI=100.0
AMOUNT_LO=10
AMOUNT_HI=15
REAP=i_log
REGEN=60*60*10

[REGIONRESOURCE mr_rotten]
// lumberjacking default
// t_tree
SKILL_LO=0.0
SKILL_HI=100.0
AMOUNT_LO=10
AMOUNT_HI=15
REAP=i_log_rotten
REGEN=60*60*10

[REGIONRESOURCE mr_pine]
// lumberjacking default
// t_tree
SKILL_LO=55.0
SKILL_HI=100.0
AMOUNT_LO=9
AMOUNT_HI=14
REAP=i_log_pine
REGEN=60*60*10

[REGIONRESOURCE mr_maple]
// lumberjacking default
// t_tree
SKILL_LO=65.0
SKILL_HI=100.0
AMOUNT_LO=8
AMOUNT_HI=12
REAP=i_log_maple
REGEN=60*60*10

[REGIONRESOURCE mr_walnut]
// lumberjacking default
// t_tree
SKILL_LO=75.0
SKILL_HI=100.0
AMOUNT_LO=7
AMOUNT_HI=10
REAP=i_log_walnut
REGEN=60*60*10

[REGIONRESOURCE mr_oak]
// lumberjacking default
// t_tree
SKILL_LO=85.0
SKILL_HI=100.0
AMOUNT_LO=5
AMOUNT_HI=8
REAP=i_log_oak
REGEN=60*60*10

[REGIONRESOURCE mr_ebony]
// lumberjacking default
// t_tree
SKILL_LO=95.0
SKILL_HI=100.0
AMOUNT_LO=2
AMOUNT_HI=5
REAP=i_log_ebony
REGEN=60*60*10

[REGIONRESOURCE mr_yew]
// lumberjacking default
// t_tree
SKILL_LO=99.0
SKILL_HI=100.0
AMOUNT_LO=1
AMOUNT_HI=3
REAP=i_log_yew
REGEN=60*60*10

[REGIONRESOURCE mr_amber]
// lumberjacking default
// t_tree
SKILL_LO=75.0
SKILL_HI=110.0
AMOUNT_LO=1
AMOUNT_HI=10
REAP=i_gem_amber
REGEN=60*60*10

[REGIONTYPE r_default_tree t_tree]
// All tress produce wood by default.
RESOURCES=250.0 mr_rotten
RESOURCES=250.0 mr_tree
RESOURCES=200.0 mr_pine
RESOURCES=150.0 mr_maple
RESOURCES=100.0 mr_walnut
RESOURCES=75.0 mr_oak
RESOURCES=50.0 mr_ebony
RESOURCES=25.0 mr_yew
RESOURCES=25.0 mr_amber

[REGIONTYPE r_default_tree t_normal]
// All tress produce wood by default.
RESOURCES=250.0 mr_rotten
RESOURCES=250.0 mr_tree
RESOURCES=200.0 mr_pine
RESOURCES=150.0 mr_maple
RESOURCES=100.0 mr_walnut
RESOURCES=75.0 mr_oak
RESOURCES=50.0 mr_ebony
RESOURCES=25.0 mr_yew
RESOURCES=25.0 mr_amber